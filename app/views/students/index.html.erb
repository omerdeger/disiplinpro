<div class="row">
  <div class="col-lg-12 grid-margin">
    <div class="card">
      <div class="card-body">
        <h4 class="cad-title">Son Olaylar</h4>
        <% if @students.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Id Number</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% @students.each do |student| %>
                <tr>
                  <th scope="row"><%= student.id %></th>
                  <td><%= link_to student.full_name, student_path(student) %></td>
                  <td><%= student.phone_number %></td>
                  <td><%= student.id_number %></td>
                  <td>
                    <span class"icon">
                      <%= link_to edit_student_path(student), style:"text-decoration: none" do %>
                        <i class="mdi mdi- mdi-pencil"></i>
                      <% end %>
                    </span>
                    <span class"icon">
                      <%= link_to student_path(student), method: :delete, data: { confirm: 'Are you sure?'}, style:"text-decoration: none" do %>
                        <i class="mdi mdi-delete"></i>
                      <% end %>
                    </span> 
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="card-body">
            <blockquote class="blockquote blockquote-danger">
              <p>Herhangi bir öğrenci bulunamadı.</p>
              <footer class="blockquote-footer">Yeni bir tane eklemek için
                <cite title="Source Title"><%= link_to "tıklayınız", new_student_path, style:"text-decoration:none;" %></cite>
              </footer>
            </blockquote>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'New', new_student_path, class: 'btn btn-primary'%>